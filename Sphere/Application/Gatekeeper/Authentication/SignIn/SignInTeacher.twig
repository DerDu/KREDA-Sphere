<form class="form-horizontal" action="" method="post">
    <div class="form-group {{ CredentialNameGroup }}">
        <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-user"></span>
                        </span>
            <input type="text" class="form-control" name="CredentialName" placeholder="Benutzername"
                   value="{{ CredentialNameValue }}"/>
            {{ CredentialNameFeedbackIcon }}
        </div>
        {{ CredentialNameFeedbackMessage }}
    </div>
    <div class="form-group {{ CredentialLockGroup }}">
        <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-lock"></span>
                        </span>
            <input type="password" class="form-control" name="CredentialLock" placeholder="Passwort"
                   value="{{ CredentialLockValue }}"/>
            {{ CredentialLockFeedbackIcon }}
        </div>
        {{ CredentialLockFeedbackMessage }}
    </div>
    <div class="form-group {{ CredentialKeyGroup }}">
        <div class="input-group">
                        <span class="input-group-addon">
                            <span class="glyphicon glyphicon-certificate"></span>
                        </span>
            <input type="password" class="form-control" name="CredentialKey" placeholder="YubiKey">
            {{ CredentialKeyFeedbackIcon }}
        </div>
        {{ CredentialKeyFeedbackMessage }}
    </div>
    <div class="form-group">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Anmelden</button>
            <a class="btn btn-link" href="{{ UrlBase }}/Sphere/Assistance/Account/Password/Forgotten">Passwort
                vergessen</a>
        </div>
    </div>
</form>

