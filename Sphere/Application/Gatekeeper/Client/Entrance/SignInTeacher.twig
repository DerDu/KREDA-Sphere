<div class="container-fluid">
    <div class="row">
        <div class="col-xs-2"></div>
        <div class="col-xs-8 text-center">
            <h1>Anmeldung</h1>
            <hr/>
            <form class="form-horizontal" action="" method="post">
                <div class="form-group{{ CredentialNameGroup }}">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-user"></span></span>
                        <input type="text" class="form-control" name="CredentialName" placeholder="Benutzername">
                    </div>
                </div>
                <div class="form-group{{ CredentialLockGroup }}">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-lock"></span></span>
                        <input type="password" class="form-control" name="CredentialLock" placeholder="Passwort">
                    </div>
                </div>
                <div class="form-group{{ CredentialKeyGroup }}">
                    <div class="input-group">
                        <span class="input-group-addon"><span class="glyphicon glyphicon-certificate"></span></span>
                        <input type="password" class="form-control" name="CredentialKey" placeholder="Yubi-Key">
                    </div>
                </div>
                <div class="form-group">
                    <div class="input-group">
                        <button type="submit" class="btn btn-primary">Anmelden</button>
                    </div>
                </div>
            </form>
        </div>
        <div class="col-xs-2"></div>
    </div>
</div>
