<div class="form-group {{ PersonNationalityGroup }}">
    <label>Staatsangehörigkeit</label>

    <div class="input-group">
        <span class="input-group-addon">
           <span class="glyphicon glyphicon-user"></span>
        </span>
        <input type="text" class="form-control Typeahead_Nationality" name="PersonNationality"
               placeholder="Staatsangehörigkeit"
               value="{{ PersonNationalityValue }}"/>
        {{ PersonNationalityFeedbackIcon }}
    </div>
    {{ PersonNationalityFeedbackMessage }}
</div>

<script type="text/javascript">
    jQuery( '.Typeahead_Nationality' ).ModCompleter( {
        data: [
            'Deutsch'
        ]
    } );
</script>
