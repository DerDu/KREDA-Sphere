<form class="form-horizontal" action="" method="post">
    <div class="form-group {{ AccessPrivilegeGroup }}">
        <div class="input-group">
                       <span class="input-group-addon">
                           <span class="glyphicons glyphicons-keys"></span>
                       </span>
            <input type="text" class="form-control" name="AccessPrivilege" placeholder="Name">
            {{ AccessPrivilegeFeedbackIcon }}
        </div>
        {{ AccessPrivilegeFeedbackMessage }}
    </div>
    <div class="form-group">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Hinzuf√ºgen</button>
        </div>
    </div>
</form>

<br/>
<h3>Bestehende Privilegien
    <small>Rechtegruppen</small>
</h3>

<table id="TableAccessPrivilegeList" class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    {% for AccessPrivilege in AccessPrivilegeList %}
        <tr>
            <td>{{ AccessPrivilege.Id }}</td>
            <td class="text-uppercase">{{ AccessPrivilege.Name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<script>
    Client.Use( 'ModTable', function()
    {
        jQuery( '#TableAccessPrivilegeList' ).ModTable();
    } )
</script>
