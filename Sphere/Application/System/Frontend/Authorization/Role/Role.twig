<form class="form-horizontal" action="" method="post">
    <div class="form-group {{ AccountRoleGroup }}">
        <div class="input-group">
                       <span class="input-group-addon">
                           <span class="glyphicons glyphicons-keys"></span>
                       </span>
            <input type="text" class="form-control" name="AccountRole" placeholder="Name">
            {{ AccountRoleFeedbackIcon }}
        </div>
        {{ AccountRoleFeedbackMessage }}
    </div>
    <div class="form-group">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Hinzuf√ºgen</button>
        </div>
    </div>
</form>

<br/>
<h3>Bestehende Rollen
    <small>Zugriffslevelgruppen</small>
</h3>

<table id="TableAccountRoleList" class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Name</th>
    </tr>
    </thead>
    <tbody>
    {% for AccountRole in AccountRoleList %}
        <tr>
            <td>{{ AccountRole.Id }}</td>
            <td class="text-uppercase">{{ AccountRole.Name }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<script>
    Client.Use( 'ModTable', function()
    {
        jQuery( '#TableAccountRoleList' ).ModTable();
    } )
</script>
