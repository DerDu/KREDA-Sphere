<table id="TableRightList" class="table table-bordered table-condensed">
    <thead>
    <tr>
        <th>Right-Id</th>
        <th>Right-Route</th>
    </tr>
    </thead>
    <tbody>
    {% for iRight, oRight in RightList %}
        <tr>
            <td>{{ oRight.Id }}</td>
            <td>{{ oRight.Route }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<script>
    Client.Use( 'ModTable', function()
    {
        jQuery( '#TableAccountRoleList' ).ModTable();
        jQuery( '#TableRightList' ).ModTable();
    } )
</script>
