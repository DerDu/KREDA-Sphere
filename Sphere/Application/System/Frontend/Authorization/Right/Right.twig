<form class="form-horizontal" action="" method="post">
    <div class="form-group {{ AccessRightGroup }}">
        <div class="input-group">
                       <span class="input-group-addon">
                           <span class="glyphicons glyphicons-keys"></span>
                       </span>
            <input type="text" class="form-control" name="AccessRight" placeholder="Route">
            {{ AccessRightFeedbackIcon }}
        </div>
        {{ AccessRightFeedbackMessage }}
    </div>
    <div class="form-group">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">Hinzuf√ºgen</button>
        </div>
    </div>
</form>

<br/>
<h3>Bestehende Rechte
    <small>Routen</small>
</h3>

<table id="TableAccessRightList" class="table table-bordered">
    <thead>
    <tr>
        <th>Id</th>
        <th>Route</th>
    </tr>
    </thead>
    <tbody>
    {% for AccessRight in AccessRightList %}
        <tr>
            <td>{{ AccessRight.Id }}</td>
            <td class="text-uppercase">{{ AccessRight.Route }}</td>
        </tr>
    {% endfor %}
    </tbody>
</table>

<script>
    Client.Use( 'ModTable', function()
    {
        jQuery( '#TableAccessRightList' ).ModTable();
    } )
</script>
