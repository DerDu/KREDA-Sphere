<form action="{{ FormAction }}" method="post">
    {% for GridGroup in GridGroupList %}
        {% if( GridGroup.getTitle is not empty ) %}
            <h4>{{ GridGroup.getTitle }}</h4>
        {% endif %}
        {% for GridRow in GridGroup.getRowList %}
            <div class="row">
                {% for GridCol in GridRow.getColList %}
                    <div class="col-md-{{ GridCol.Size }}">
                        {% for GridElement in GridCol.getElementList %}
                            {{ GridElement }}
                        {% endfor %}
                    </div>
                {% endfor %}
            </div>
        {% endfor %}
    {% endfor %}
    <div class="form-group">
        <div class="input-group">
            <button type="submit" class="btn btn-primary">{{ FormSubmit }}</button>
        </div>
    </div>
</form>
